---
import Home from '../layouts/Home.astro'
const response = await fetch('https://api.oioweb.cn/api/common/OneDayEnglish')
const datas = await response.json()
const linkedList = {
  data: [
    {
      label: '俊劫学习基地',
      link: 'https://alexjjwu.fun',
    },
    {
      label: 'Liuzepeng',
      link: 'https://www.liuzepeng.com',
    },
    {
      label: 'lemonhx',
      link: 'https://lemonhx.moe',
    },
  ],
}
---

<style>
  .prose-map {
    width: 600px;
    height: 500px;
  }
</style>

<Home title="地图/友链">
  <div class="prose-map mx-auto text-sm">
    <h1>Map track!</h1>
    {datas.result.note}
  </div>
  <h2>友情链接👇</h2>
  <div class="prose pb-10">
    {
      linkedList.data.map((res) => (
        <ul>
          <li>
            <a href={res.link} target="_blank" rel="noopener noreferrer">
              {res.label}
            </a>
          </li>
        </ul>
      ))
    }
  </div>
</Home>
