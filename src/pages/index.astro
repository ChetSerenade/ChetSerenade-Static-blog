---
import Home from '../layouts/Home.astro'
import PostList from '../components/PostList.astro'
import CodingList from '../components/Coding.astro'
import Calendar from '../components/calendar.vue'
import { Content as Intro } from '../intro.md'
---

<Home>
  <div class="mx-auto text-sm">
    <h2 class="font-bold mb-6 text-md">ABOUT /「 关于我 」</h2>
    <div class="prose prose-sm">
      <Intro />
    </div>
  </div>
  <div class="text-sm mt-8 be-with">
    <h2 class="font-bold mb-6 text-md">PUBLIC / 「 大千同在 」</h2>
    <Calendar />
  </div>
  <div class="text-sm mt-8">
    <h2 class="font-bold mb-6 text-md">CODING /「 前端 」</h2>
    <div class="ml-6 md:ml-0">
      <CodingList />
    </div>
  </div>
  <div class="text-sm mt-8">
    <h2 class="font-bold mb-6 text-md">ESSAYS / 「 生活 」</h2>
    <div class="ml-6 md:ml-0">
      <PostList />
    </div>
  </div>
</Home>

<style>
  @media (max-width: 1100px) {
    .be-with {
      display: none;
    }
  }
</style>
